@model IEnumerable<Announcements>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<div class="card">
    <div class="card-header">
        <strong class="card-title text-center">Duyurular Listesi</strong>
    </div>
    <div class="card-body">
        <div class="table-responsive table--no-card m-b-30">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr class="text-center">
                        <th>Başlık</th>
                        <th>Eklenme Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>
                                @if (item.Title.Length > 20)
                                {
                                    @item.Title.Substring(0, 20) 
                                                            }
                                                    else
                                                    {
                                                        @item.Title
                                                    }
                            </td>
                            <td>@item.CreatedDate</td>
                            <td>
                                <center><a href="/PanelDuyurular/Incele/@item.Id" class="btn btn-success"><i class="fa fa-search" aria-hidden="true"></i> Duyuruyu Oku</a></center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



