@model User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2 class="text-center">Profil</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header text-center">
                <strong class="card-title mb-3">Profil</strong>
            </div>
            <div class="card-body">
                <div class="mx-auto d-block">
                    <img class="rounded-circle mx-auto d-block" src="~/TemplatePanel/images/icon/avatar-01.jpg" alt="Card image cap">
                    <h5 class="text-sm-center mt-2 mb-1">@Model.Username</h5>
                    <div class="location text-sm-center">
                        <i class="fa fa-envelope-square"></i> @Model.Email
                    </div>
                </div>
                <hr>
                <div class="card-text text-sm-center">

                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header text-center">
                <strong class="card-title mb-3">Profil</strong>
            </div>
            <div class="card-body">
                <div class="mx-auto d-block">
                    <a href="/PanelProfil/Duzenle/@Model.Id" class="btn btn-success btn-block"><i class="fa fa-wrench"></i> Profili Düzenle</a><br />
                    <a href="/PanelProfil/Fotograf/@Model.Id" class="btn btn-success btn-block"><i class="fa fa-camera-retro"></i> Fotoğrafı Düzenle</a><br />
                    <a href="/PanelProfil/Sifre/@Model.Id" class="btn btn-success btn-block"><i class="fa fa-unlock"></i> Şifre Değiştir</a><br />
                </div>
                <hr>
                <div class="card-text text-sm-center">

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header text-center">
                <strong class="card-title mb-3">Profil Bilgileri</strong>
            </div>
            <div class="card-body">
                <div class="mx-auto d-block text-center">
                    <p>Kullanıcı Adı</p>
                    <input type="text" class="form-control text-center" value="@Model.Username" readonly /><hr />
                    <p>Ad Soyad</p>
                    <input type="text" class="form-control text-center" value="@Model.NameSurname" readonly /><hr />
                    <p>Mail Adresi</p>
                    <input type="text" class="form-control text-center" value="@Model.Email" readonly /><hr />
                    <p>Üyelik Tarihi</p>
                    <input type="text" class="form-control text-center" value="@Model.CreatedDate" readonly /><hr />
                </div>
                <hr>
                <div class="card-text text-sm-center">

                </div>
            </div>
        </div>
    </div>
</div>

