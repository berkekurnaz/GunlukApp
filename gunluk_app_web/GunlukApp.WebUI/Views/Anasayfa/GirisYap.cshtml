@model User
@{
    ViewData["Title"] = "GirisYap";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- Sitenin Form Kısmı -->
<div class="container text-center">
    <br>
    <h3>Giriş Yap</h3>
    <hr>

    @if (ViewBag.GirisYapmaHataMesaji != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.GirisYapmaHataMesaji
        </div>
    }

    <form asp-controller="Anasayfa" asp-action="GirisYap" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="formGroupExampleInput2">Kullanıcı Adınız</label>
            <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adınızı Bu Alana Giriniz..." required>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Şifreniz</label>
            <input type="text" class="form-control" asp-for="Password" placeholder="Şifrenizi Bu Alana Giriniz..." required>
        </div>
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    </form>

</div>

