@model Diary
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<div class="card">
    <div class="card-header">Defter Düzenleme Ekranı</div>
    <div class="card-body">
        <div class="card-title">
            <h3 class="text-center title-2">Defter Düzenle</h3>
        </div>
        <hr>
        <form asp-controller="PanelDefterler" asp-action="Guncelle" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label mb-1">Defterin Adı</label>
                <input type="text" asp-for="Name" class="form-control" value="@Model.Name" required>
            </div>
            <div class="form-group has-success">
                <label class="control-label mb-1">Defterin Açıklaması</label>
                <textarea class="form-control" asp-for="Description" rows="5" required>@Model.Description</textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-lg btn-info btn-block">
                    <i class="fa fa-wrench"></i>&nbsp;
                    <span id="payment-button-amount">Defter Düzenle</span>
                </button>
            </div>
        </form>
    </div>
</div>

