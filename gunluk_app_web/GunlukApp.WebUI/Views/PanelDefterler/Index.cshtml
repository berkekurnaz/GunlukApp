@model IEnumerable<Diary>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2 class="text-center">Defterler Listesi</h2>
<a href="/PanelDefterler/Ekle/" class="btn btn-info"><i class="fa fa-plus-circle"></i> Yeni Defter Ekle</a>
<hr />

@if (Model.Count() > 0)
{
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <strong class="card-title mb-3">@item.Name</strong>
                    </div>
                    <div class="card-body">
                        <div class="mx-auto d-block">
                            <h5 class="text-sm-center mt-2 mb-1">@item.CreatedDate</h5>
                            <div class="location text-sm-center">
                                @if (item.Description.Length > 30)
                                {
                                    @item.Description.Substring(0,30)<span>...</span>
                                }
                                else
                                {
                                    @item.Description
                                }
                            </div>
                        </div>
                        <hr>
                        <div class="card-text text-sm-center">
                            <a href="/PanelDefterler/Incele/@item.Id" class="btn btn-success">Deftere Gir</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <strong class="card-title">
                Eklenmiş Defter Bulunamadı
                <small>
                    <span class="badge badge-success float-right mt-1">Success</span>
                </small>
            </strong>
        </div>
        <div class="card-body">
            <p class="card-text">
                Şimdiye Kadar Herhangi Bir Defter Eklememişsin. Hemen Eklemek İçin Tıkla <br /> 
                <a href="/PanelDefterler/Ekle/" class="btn btn-success">Yeni Defter Ekle</a>
            </p>
        </div>
    </div>
}


