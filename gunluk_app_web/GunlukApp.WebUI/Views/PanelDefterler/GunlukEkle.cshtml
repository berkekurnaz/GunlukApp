@model Articles
@{
    ViewData["Title"] = "GunlukEkle";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<script src="~/TemplatePanel/js/ckeditor.js"></script>
<script src="~/TemplatePanel/js/tr.js"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<script src="~/TemplatePanel/js/jquery-3.3.1.slim.min.js"></script>

<style>
    /*Textbox*/
    .ck-editor__editable_inline {
        min-height: 300px !important;
    }
</style>
<div class="card animated pulse">
    <div class="card-header">Yeni Günlük Ekleme Ekranı</div>
    <div class="card-body">
        <div class="card-title">
            <h3 class="text-center title-2">Günlük Ekle</h3>
        </div>
        <hr>
        <form asp-controller="PanelDefterler" asp-action="GunlukEkle" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label mb-1">Günlük Başlık</label>
                <input type="text" asp-for="Title" maxlength="50" class="form-control" required>
            </div>
            <div class="form-group">
                <label class="control-label mb-1">Eklenme Tarihi</label>
                <input asp-for="CreatedDate" value="@DateTime.Now.ToShortDateString()" readonly/>
            </div>
            <div class="form-group has-success">
                <label class="control-label mb-1">Günlük İçerik</label>
                <textarea class="form-control" asp-for="Content" rows="5"></textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-lg btn-info btn-block">
                    <i class="fa fa-plus-circle"></i>&nbsp;
                    <span id="payment-button-amount">Yeni Günlük Ekle</span>
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    ClassicEditor
        .create(document.querySelector('#Content'), {
            language: 'tr'
        })
        .then(editor => {
            window.editor = editor;
        })
        .catch(err => {
            console.error(err.stack);
        });
</script>

<script src="~/TemplatePanel/js/gijgo.min.js"></script>
<script>
    $('#CreatedDate').datepicker({
        uiLibrary: 'bootstrap4'
    });
</script>